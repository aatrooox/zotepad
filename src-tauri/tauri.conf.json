{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "zotepad",
  "version": "0.5.10",
  "identifier": "com.zzaoclub.zotepad",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:4577",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm generate"
  },
  "app": {
    "windows": [
      {
        "title": "zotepad",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "android": {
      "minSdkVersion": 24,
      "versionCode": 1
    },
    "macOS": {
      "minimumSystemVersion": "10.13",
      "exceptionDomain": ""
    }
  }
}
